<h2>Client Details</h2>

<form role="form" class="form-horizontal" action="/client/<%= @client.id %>" method="post">
  <div class="form-group">
    <label class="control-label" for="firstname">First Name</label>
    <input class="form-control" type="text" name="firstname" value="<%= @client.firstname %>">
  </div>
  <div class="form-group">
    <label class="control-label" for="lastname">Last Name</label>
    <input class="form-control" type="text" name="lastname" value="<%= @client.lastname %>">
  </div>
  <button class="btn btn-primary" type="submit" name="button">Save</button>
  <a class="btn btn-primary" href="/client/<%= @client.id %>/delete" method="post">Delete Client</a>
</form>
